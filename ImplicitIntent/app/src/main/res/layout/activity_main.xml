<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        android:weightSum="10">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter first value"
            android:layout_weight="6"
            android:layout_marginBottom="15dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtfirst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/btncontact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/contact_book" />


        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter second value"
            android:layout_weight="1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtsecond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btndial"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Dial number"
            app:icon="@mipmap/phone"
            app:iconSize="20dp"
            style="@style/Widget.MaterialComponents.Button.Icon"
            />

        <Button
            android:id="@+id/btncall"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Call number"
            app:icon="@mipmap/phone"
            app:iconSize="20dp"
            style="@style/Widget.MaterialComponents.Button.Icon"
            />

        <Button
            android:id="@+id/btnsms"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Send sms"
            app:icon="@mipmap/sms"
            app:iconSize="20dp"
            style="@style/Widget.MaterialComponents.Button.Icon"
            />

        <Button
            android:id="@+id/btnshowlocation"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="View in google map"
            app:icon="@mipmap/google_map"
            app:iconSize="20dp"
            style="@style/Widget.MaterialComponents.Button.Icon"
            />

        <Button
            android:id="@+id/btnsharetext"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Share text"
            app:icon="@mipmap/text"
            app:iconSize="20dp"
            style="@style/Widget.MaterialComponents.Button.Icon"
            />

        <Button
            android:id="@+id/btnwebsite"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="open the website"
            app:icon="@mipmap/website"
            app:iconSize="20dp"
            style="@style/Widget.MaterialComponents.Button.Icon"
            />

        <Button
            android:id="@+id/btnselectphoto"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="select photo from gallery"
            app:icon="@mipmap/photo"
            app:iconSize="20dp"
            style="@style/Widget.MaterialComponents.Button.Icon"
            />

        <ImageView
            android:id="@+id/imgpicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/btncapturephoto"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Capture photo"
            app:icon="@mipmap/camera"
            app:iconSize="20dp"
            style="@style/Widget.MaterialComponents.Button.Icon"
            />

        <ImageView
            android:id="@+id/imgcamerapicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher" />

<!--        <Button-->
<!--            android:id="@+id/btnrate"-->
<!--            android:layout_weight="1"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:text="rate and review app"-->
<!--            app:icon="@mipmap/rate"-->
<!--            app:iconSize="20dp"-->
<!--            style="@style/Widget.MaterialComponents.Button.Icon"-->
<!--            />-->

        <Button
            android:id="@+id/btnshareimage"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="share image"
            app:icon="@mipmap/share"
            app:iconSize="20dp"
            style="@style/Widget.MaterialComponents.Button.Icon"
            />

    </LinearLayout>

</ScrollView>